NODE_ENV=development
PORT=3000

# MongoDB: se não incluir nome do banco, o código adiciona /sistema_pagamentos
MONGODB_URI=mongodb+srv://USER:PASS@cluster0.xxxxxx.mongodb.net

# JWT Secrets (use valores fortes em produção)
JWT_SECRET=change_me_access_secret_32_chars
JWT_REFRESH_SECRET=change_me_refresh_secret_32_chars
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Frontends permitidos (separados por vírgula)
FRONTEND_URLS=http://localhost:4200

# Chave de criptografia (EXATAMENTE 32 caracteres)
ENCRYPTION_KEY=32_chars_random_key_example_1234

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Expiração PIX (minutos)
PIX_EXPIRATION_MINUTES=30

# Flags de features
AUTO_LOGIN_AFTER_REGISTER=false
PASSWORDLESS_REGISTER=false

# Email (preencher se for enviar emails reais)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="Sistema Pagamentos <noreply@sistemapagamentos.com>"

# Logging
LOG_LEVEL=info

# Observações:
# - Em produção, não commitar .env; usar variáveis do provedor (Render).
# - Ajustar FRONTEND_URLS conforme domínios reais.
# - Gerar ENCRYPTION_KEY segura: 32 chars aleatórios.
# - Ajustar limites conforme carga esperada.# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/sistema_pagamentos
DB_NAME=sistema_pagamentos

# JWT Secrets
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_mude_em_producao
JWT_REFRESH_SECRET=seu_refresh_secret_super_seguro_aqui_mude_em_producao
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (usando Gmail como exemplo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
EMAIL_FROM=noreply@sistemapagamentos.com

# Frontend URL (para CORS e redirecionamentos)
FRONTEND_URL=http://localhost:4200

# Encryption for sensitive data
ENCRYPTION_KEY=sua_chave_de_criptografia_32_caracteres

# Payment Gateway (Mock for development)
