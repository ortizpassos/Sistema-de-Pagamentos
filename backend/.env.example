# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/sistema_pagamentos
DB_NAME=sistema_pagamentos

# JWT Secrets
JWT_SECRET=seu_jwt_secret_super_seguro_aqui_mude_em_producao
JWT_REFRESH_SECRET=seu_refresh_secret_super_seguro_aqui_mude_em_producao
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (usando Gmail como exemplo)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app
EMAIL_FROM=noreply@sistemapagamentos.com

# Frontend URL (para CORS e redirecionamentos)
FRONTEND_URL=http://localhost:4200

# Encryption for sensitive data
ENCRYPTION_KEY=sua_chave_de_criptografia_32_caracteres

# Payment Gateway (Mock for development)
PAYMENT_GATEWAY_URL=https://api.mock-payment.com
PAYMENT_GATEWAY_API_KEY=sua_api_key_do_gateway

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PIX Configuration
PIX_EXPIRATION_MINUTES=30